<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Appenders>
        <File name="stationsSearch" fileName="logs/search.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <filter type="log4net.Filter.LevelMatchFilter">
                <acceptOnMatch value="true" />
                <levelToMatch  value="INFO" />
            </filter>
            <filter type="log4net.Filter.DenyAllFilter" />
        </File>
        <File name="errorsSearch" fileName="logs/input_errors.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name="exceptionsSearch" fileName="logs/exceptions.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="errorsSearch" level = "warn"/>
            <AppenderRef ref="exceptionsSearch" level = "error"/>
            <AppenderRef ref="stationsSearch" level ="info" />
        </Root>
    </Loggers>

</Configuration>